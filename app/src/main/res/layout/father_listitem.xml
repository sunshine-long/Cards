    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="97dp"
            android:layout_height="97dp"
            android:scaleType="fitXY"
            android:layout_margin="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="新都金融国际影城"
                android:textColor="@color/colorMainListTitle"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/location"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/place" />

                <TextView
                    android:id="@+id/address"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:lines="1"
                    android:text="新都区蜀龙大道1088号"
                    android:textColor="#666"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/distance_main_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="" />
            </LinearLayout>

             <LinearLayout
                 android:id="@+id/discount_ly"
                 android:layout_width="match_parent"
                 android:layout_height="20dp"
                 android:layout_marginRight="60dp"
                 android:layout_marginTop="8dp"
                 android:gravity="center_vertical"
                 android:orientation="horizontal">

                 <ImageView
                     android:id="@+id/discount_iv"
                     android:layout_width="15dp"
                     android:layout_height="15dp"
                     android:layout_gravity="center_vertical"
                     android:src="@drawable/discount" />

                 <ImageView
                     android:id="@+id/bankimage_1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="8dp"
                     android:src="@drawable/abc" />

                 <TextView
                     android:id="@+id/discount_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="6dp"
                     android:lines="1"
                     android:gravity="center_vertical"
                     android:text="全场两折起"
                     android:textColor="#666"
                     android:textSize="12sp" />
             </LinearLayout>

             <LinearLayout
                 android:id="@+id/discount_1_ly"
                 android:layout_width="match_parent"
                 android:layout_height="20dp"
                 android:layout_marginRight="60dp"
                 android:layout_marginTop="8dp"
                 android:gravity="center_vertical"
                 android:orientation="horizontal">

                 <ImageView
                     android:id="@+id/discount_1_iv"
                     android:layout_width="15dp"
                     android:layout_height="15dp"
                     android:layout_gravity="center_vertical"
                     android:src="@drawable/discount_1" />
                 <ImageView
                     android:id="@+id/bankimage_2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="8dp"
                     android:src="@drawable/bcm" />

                 <TextView
                     android:id="@+id/discount_1_tv"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="6dp"
                     android:layout_toRightOf="@id/discount_1_iv"
                     android:gravity="center_vertical"
                     android:text="全场满100减50"
                     android:lines="1"
                     android:textColor="#666"
                     android:textSize="12sp" />
                 <Button
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:text="展开"
                     android:textSize="8sp"
                     android:background="@color/no_color"/>
             </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.MineFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/bg">

            <FrameLayout
                android:id="@+id/mine_head_bg"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/mine_head_background">

                <ImageView
                    android:id="@+id/my_head"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/not_login"
                    android:layout_gravity="center" />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/mine_head_bg"
                android:text="你的昵称"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="34dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/mybanks"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginLeft="14dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/care"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="我关注的银行"
                android:textSize="14sp"
                android:layout_marginLeft="12dp"
                android:textColor="#666"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right"
                android:layout_marginRight="16dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <LinearLayout
            android:id="@+id/mycard"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginLeft="14dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/bag"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="我的卡包"
                android:textSize="14sp"
                android:layout_marginLeft="12dp"
                android:textColor="#666"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right"
                android:layout_marginRight="16dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginLeft="14dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/mes"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="我的消息"
                android:textSize="14sp"
                android:layout_marginLeft="12dp"
                android:textColor="#666"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right"
                android:layout_marginRight="16dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ddd"/>
        <LinearLayout
            android:id="@+id/user_advice"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginLeft="14dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/opinion"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:textSize="14sp"
                android:layout_marginLeft="12dp"
                android:textColor="#666"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right"
                android:layout_marginRight="16dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <LinearLayout
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_marginLeft="14dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/set"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="14sp"
                android:layout_marginLeft="12dp"
                android:textColor="#666"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right"
                android:layout_marginRight="16dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"/>
    </LinearLayout>

</ScrollView>
